{
  "name": "lifelens",
  "version": "1.0.0",
  "description": "AI-powered daily decision assistant app",
  "main": "index.js",
  "workspaces": [
    "backend",
    "frontend",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:sentiment\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "dev:sentiment": "cd services/sentiment && source venv/bin/activate && python -m uvicorn app.main:app --reload --port 8000",
    "install:all": "npm install && npm run install:backend && npm run install:frontend && npm run install:sentiment",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:sentiment": "cd services/sentiment && pip install -r requirements.txt",
    "build": "npm run build:types && npm run build:backend && npm run build:frontend",
    "build:types": "cd packages/shared-types && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && expo build:web",
    "test": "npm run test:types && npm run test:backend && npm run test:frontend",
    "test:types": "cd packages/shared-types && npm run test",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint": "npm run lint:types && npm run lint:backend && npm run lint:frontend",
    "lint:types": "cd packages/shared-types && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "typecheck": "npm run typecheck:types && npm run typecheck:backend && npm run typecheck:frontend",
    "typecheck:types": "cd packages/shared-types && npm run typecheck",
    "typecheck:backend": "cd backend && npm run typecheck",
    "typecheck:frontend": "cd frontend && npm run typecheck",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/lifelens.git"
  },
  "keywords": [
    "ai",
    "decision-making",
    "mood-tracking",
    "react-native",
    "expo",
    "nodejs",
    "fastapi",
    "supabase"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}